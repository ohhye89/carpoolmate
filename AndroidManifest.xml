<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alphastudio.carpoolmate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:theme="@android:style/Theme.NoTitleBar"
        android:allowBackup="true"
        android:icon="@drawable/carpoolmate_icon"
        android:label="@string/app_name" >
        
        <activity 
            android:name="com.alphastudio.carpoolmate.LoginActivity"
            android:label="@string/app_name" 
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />		

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.alphastudio.carpoolmate.LoadingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
			android:name="com.alphastudio.carpoolmate.MainActivity" >
        </activity>
        <activity android:name="CheckInActivity"></activity>
        <activity android:name="HistoryActivity"></activity>
        
    </application>

</manifest>