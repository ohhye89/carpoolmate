<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#558ED5"
    android:orientation="vertical" >

    <ImageView 
        android:id="@+id/login_image_logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/carpoolmate_logo"
        android:contentDescription="@string/login_image_logo" />
    
    <RadioGroup 
        android:id="@+id/login_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image_logo"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
	    <RadioButton 
	        android:id="@+id/login_radiobtn_car"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:text="@string/login_radiobtn_car" />
	    <RadioButton 
	        android:id="@+id/login_radiobtn_mate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:text="@string/login_radiobtn_mate"
	        android:checked="true" />
    </RadioGroup>
    
    <TextView
        android:id="@+id/login_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_radiogroup"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:text="@string/login_txt_id" />

    <EditText
        android:id="@+id/login_edittxt_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_txt_id"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="@string/login_edittxt_id"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/login_txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_edittxt_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        android:text="@string/login_txt_password"
        android:layout_marginLeft="20dp" />

    <EditText
        android:id="@+id/login_edittxt_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/login_edittxt_id"
        android:layout_below="@+id/login_txt_password"
        android:layout_marginLeft="20dp"
        android:hint="@string/login_edittxt_password"
        android:inputType="textPassword"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_edittxt_password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        
	    <Button 
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/login_btn_login"
	        android:text="@string/login_btn_login" />
	    
	    <Button
	        android:layout_weight="1" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/login_btn_find"
	        android:text="@string/login_btn_find" />
    </LinearLayout>

</RelativeLayout>